{
  "name": "ptcg-opponent-checker",
  "version": "1.0.0",
  "description": "PTCG Opponent Checker - ポケモンカード大会の対戦相手デッキ検索ツール",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "crawl": "tsx src/index.ts",
    "crawl:update": "tsx src/index.ts --update",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "tsx src/api/index.ts",
    "dev:web": "cd web && npm run dev",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "pokemon",
    "tcg",
    "rk9",
    "crawler"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.30.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "better-sqlite3": "^11.8.1",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.11.9",
    "playwright": "^1.50.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
